<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flag_usaImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyChooserActivity">

    <ImageView
        android:id="@+id/flag_usaImageView"
        android:layout_width="132dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/flag_englandImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flag_usa" />

    <ImageView
        android:id="@+id/flag_japanImageView"
        android:layout_width="132dp"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/flag_englandImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/flag_englandImageView"
        app:layout_constraintTop_toBottomOf="@+id/flag_englandImageView"
        app:srcCompat="@drawable/flag_japan" />

    <ImageView
        android:id="@+id/flag_englandImageView"
        android:layout_width="132dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/flag_japanImageView"
        app:layout_constraintEnd_toEndOf="@+id/flag_usaImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/flag_usaImageView"
        app:layout_constraintTop_toBottomOf="@+id/flag_usaImageView"
        app:srcCompat="@drawable/flag_england" />

    <Button
        android:id="@+id/DollarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="189dp"
        android:layout_marginLeft="189dp"
        android:text="Dollar to euro"
        app:layout_constraintBottom_toBottomOf="@+id/flag_usaImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/flag_usaImageView"
        app:layout_constraintTop_toTopOf="@+id/flag_usaImageView" />

    <Button
        android:id="@+id/PoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pound to euro"
        app:layout_constraintBottom_toBottomOf="@+id/flag_englandImageView"
        app:layout_constraintEnd_toEndOf="@+id/DollarButton"
        app:layout_constraintStart_toStartOf="@+id/DollarButton"
        app:layout_constraintTop_toTopOf="@+id/flag_englandImageView" />

    <Button
        android:id="@+id/yenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yen to euro"
        app:layout_constraintBottom_toBottomOf="@+id/flag_japanImageView"
        app:layout_constraintEnd_toEndOf="@+id/PoundButton"
        app:layout_constraintStart_toStartOf="@+id/PoundButton"
        app:layout_constraintTop_toTopOf="@+id/flag_japanImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>